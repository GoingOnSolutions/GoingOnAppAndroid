<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_init_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="de.andreasschrade.goingon.ui.signing.InitFragment">

    <include layout="@layout/include_signing_toolbar" />

    <ImageView
        android:id="@+id/imgInitLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/go_logo" />

    <in.championswimmer.libsocialbuttons.buttons.BtnFacebook
        android:text="@string/log_in_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>
